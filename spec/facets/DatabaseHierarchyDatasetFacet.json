{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openlineage.io/spec/facets/1-0-0/DatabaseHierarchyDatasetFacet.json",
  "$defs": {
    "DatabaseHierarchyDatasetFacetLevel": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Hierarchy level type",
          "example": "CATALOG,DATABASE,SCHEMA,TABLE"
        },
        "name": {
          "description": "Hierarchy level name",
          "type": "string",
          "example": "my_db,my_schema,my_table"
        }
      },
      "required": ["type", "name"]
    },
    "DatabaseHierarchyDatasetFacet": {
      "allOf": [
        {
          "$ref": "https://openlineage.io/spec/2-0-2/OpenLineage.json#/$defs/DatasetFacet"
        },
        {
          "type": "object",
          "properties": {
            "hierarchy": {
              "type": "array",
              "description": "Database hierarchy levels (e.g. DATABASE -> SCHEMA -> TABLE), from highest to lowest level. The order is important",
              "items": {
                "$ref": "#/$defs/DatabaseHierarchyDatasetFacetLevel"
              }
            }
          },
          "required": ["hierarchy"]
        }
      ],
      "type": "object"
    }
  },
  "type": "object",
  "properties": {
    "databaseHierarchy": {
      "$ref": "#/$defs/DatabaseHierarchyDatasetFacet"
    }
  }
}
